
<div class="trip-container">
  <div class="search">
  <h4>Find a ship by location </h4>
  <%= form_tag ships_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Rennes, Paris, Vannes.."
    %>
    <%= submit_tag("Search") %>
  <% end %>
  </div>
  <div class="trip">
    <h6>Experience the perfect ship,</h6>
    <br>
    <h6>for an unforgettable journey in Space</h6>
  </div>
</div>

<div class="warp">
  <div class="card-container">
    <% @ships.each do |ship| %>
      <%= link_to ship_path(ship), class: "card-index-link col-xs-8 col-sm-4" do %>
        <div class="card card-index" >
          <%= cl_image_tag ship.photo, crop: :fill %>
          <div class="card-infos">
            <div>
              <h2><%= ship.name.capitalize %></h2>
              <p><%= ship.location.capitalize %></p>
            </div>
              <div class="icon">
                <i class="fas fa-users"></i><h2><%= ship.capacity %></h2>
              </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="col-sm-3"
    id="map"
    style="width: 100%; height: 570px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

</div>
