
<div class="card-container">
  <%= form_tag ships_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "where"
    %>
</div>
<h1>Those ships are available:</h1>


<% end %>
<div class="card-container">
  <% @ships.each do |ship| %>
    <%= link_to ship_path(ship), class: "card-index-link" do %>
      <div class="card card-index" >
        <%= cl_image_tag ship.photo, crop: :fill %>
        <div class="card-infos">
          <div>
            <h2><%= ship.name.capitalize %></h2>
            <p><%= ship.location.capitalize %></p>
          </div>
          <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-trip-user avatar-bordered"/>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

