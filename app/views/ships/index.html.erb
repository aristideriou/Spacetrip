
<div class="card-container">
  <%= form_tag ships_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "where"
    %>
  <% end %>
</div>

<h1>Those ships are available:</h1>
<div class="card-container">
    <div
      id="map"
      style="width: 400px;
      height: auto;
      margin: 10px 10px 0px 0px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  <% @ships.each do |ship| %>
    <%= link_to ship_path(ship), class: "card-index-link" do %>
      <div class="card card-index" >
        <%= cl_image_tag ship.photo, crop: :fill %>
        <div class="card-infos">
          <div>
            <h2><%= ship.name.capitalize %></h2>
            <p><%= ship.location.capitalize %></p>
          </div>
          <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-trip-user avatar-bordered"/>
        </div>
      </div>
    <% end %>
<!-- ici -->
  <% end %>
</div>



