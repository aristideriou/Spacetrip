<h2>Rent your ship!</h2>

<%= simple_form_for(@ship) do |f| %>
  <%= f.input :name %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.input :capacity %>
  <%= f.input :price %>

  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <%= f.button :submit, 'Rent it!', class: 'btn btn-primary' %>
<% end %>

